<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :post_category_id %>
    <%= f.input :user_id %>
    <%= f.input :postable_id %>
    <%= f.input :postable_type %>
    <%= f.input :attached_document %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
